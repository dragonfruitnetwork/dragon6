@switch (Button)
{
    case IOverlayInfo overlay:
        <Dragon6Overlay Info="overlay"/>
        break;

    case IServiceButton navigation:
        <Dragon6HeaderButton Name="@navigation.Name" Icon="@navigation.Icon" Clicked="() => navigation.OnClick(Services)"/>
        break;

    case ICustomButton custom:
        <DynamicComponent Type="custom.ButtonComponentType"/>
        break;
}


@code {

    [Parameter]
    public IHeaderButton Button { get; set; }

    [Inject]
    public IServiceProvider Services { get; set; }

}