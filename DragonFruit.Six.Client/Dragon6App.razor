@using BlazorPro.BlazorSize
@using DragonFruit.Six.Client.Screens

<Router AppAssembly="@typeof(Dragon6App).Assembly">
    <Found Context="routeData">
        <ErrorBoundary @ref="_error">
            <ChildContent>
                <MediaQueryList>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(DefaultLayout)"/>
                </MediaQueryList>
            </ChildContent>
            <ErrorContent>
                <div class="p-4" style="height: 100vh">
                    <D6ErrorOverlay ComponentName="Dragon6" Error="context" ReloadRequested="() => _error?.Recover()"/>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(DefaultLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {

    private ErrorBoundary _error;

}