<Dragon6HeaderButton Name="Menu" Icon="bars" Clicked="() => _offcanvas?.ShowAsync()"/>

<HxOffcanvas @ref="_offcanvas"
             BodyCssClass="bg-dark"
             HeaderCssClass="d-none"
             Size="OffcanvasSize.Large"
             CssClass="bg-dark text-light mx-0"
             Placement="OffcanvasPlacement.Bottom">
    <BodyTemplate>
        <div class="row g-2">
            @foreach (var button in Buttons)
            {
                <div class="col-@button.ColumnSize">
                    <D6HeaderButton Button="button" IsMobileLayout="true"/>
                </div>
            }
        </div>
    </BodyTemplate>
</HxOffcanvas>

@code {

    private HxOffcanvas _offcanvas;

    [Parameter]
    public IEnumerable<IHeaderButton> Buttons { get; set; }

}